---
import PaperCard from './PaperCard.astro'
import papers from '@/data/papers'

const showcase_papers = papers.slice(0, 4);

---

<div class="w-full px-4 py-8" id="research">
    <div class="max-w-7xl mx-auto">
      <h1 class="text-3xl font-bold mb-8">Recent research papers</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {showcase_papers.map((paper) => (
          <PaperCard
            paper={paper}
          />
        ))}
        <a href="papers" class="hover:underline">All research</a>
      </div>
    </div>
  </div>