---
import {GraduationCap, Github, Linkedin, FileUser } from 'lucide-react'
import { Separator } from '@/components/ui/separator'
---

<section class="w-full py-6 md:py-8 lg:py-16 xl:py-16">
    <div class="flex flex-col items-center space-y-4 text-center">
      <div class="space-y-2">
        <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl bg-clip-text text-transparent bg-gradient-to-r from-primary to-gray-400">
          Antonio Ríos Vila
        </h1>
        <p class="mx-auto max-w-[700px] text-zinc-500 md:text-xl dark:text-zinc-400">
          Deep Learning Researcher, Mutlimedia Engineer
        </p>
      </div>
      <div class="flex justify-center space-x-4 mt-8">
        <a href="/pdf/CV_ARIOS.pdf" target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-primary transition-colors">
          <FileUser size={24} />
          <span class="sr-only">GitHub</span>
        </a>
        <a href="https://scholar.google.es/citations?user=XC0Tq-MAAAAJ&hl=es&oi=ao" target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-primary transition-colors">
          <GraduationCap size={24} />
          <span class="sr-only">Google Scholar</span>
        </a>
        <a href="https://github.com/antoniorv6" target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-primary transition-colors">
          <Github size={24} />
          <span class="sr-only">GitHub</span>
        </a>
        <a href="https://www.linkedin.com/in/antonio-r%C3%ADos-vila-3b189312b/" target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-primary transition-colors">
          <Linkedin size={24} />
          <span class="sr-only">LinkedIn</span>
        </a>
      </div>
      <Separator className="m-auto max-w-[700px]" />
      <div class="flex justify-center space-x-4 mt-8">
        <a href="#projects" class="text-zinc-500 hover:text-primary transition-colors">
          Projects
        </a>
        <p class="text-zinc-500">·</p>
        <a href="#research" class="text-zinc-500 hover:text-primary transition-colors">
          Research
        </a>
        <p class="text-zinc-500">·</p>
        <a href="#experience" class="text-zinc-500 hover:text-primary transition-colors">
          Experience
        </a>
        <p class="text-zinc-500">·</p>
        <a href="mailto:arios@dlsi.ua.es" class="text-zinc-500 hover:text-primary transition-colors">
          Get in touch!
        </a>
      </div>
    </div>
</section>